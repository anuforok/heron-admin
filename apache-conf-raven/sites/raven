# Apache configuration for raven site
# using JBoss for the main portal
# and JBoss-via-php for i2b2

NameVirtualHost 10.120.1.211:80
<VirtualHost    10.120.1.211:80>
  ServerName raven.kumc.edu
  DocumentRoot "/usr/local/apache2/htdocs-raven"
			     
  <Directory /usr/local/apache2/htdocs-raven/>
    Order Deny,Allow
    Allow from All
  </Directory>

</VirtualHost>

#Listen 443
NameVirtualHost 10.120.1.211:443
<VirtualHost 10.120.1.211:443>
        ServerName raven.kumc.edu

Include conf/apps/raven.conf
	RedirectMatch permanent ^/$ /raven/

# robots.txt
        Alias /robots.txt /usr/local/apache2/htdocs/robots.txt

        <Directory /usr/local/apache2/htdocs/>
	     Order Deny,Allow
             Allow from All
        </Directory>

	SSLEngine on
	SSLCertificateFile    conf/raven-ssl-cert.pem
	SSLCertificateKeyFile conf/raven-ssl-key.pem

	BrowserMatch "MSIE [2-6]" 		nokeepalive ssl-unclean-shutdown 		downgrade-1.0 force-response-1.0
	# MSIE 7 and newer should be able to use keepalive
	BrowserMatch "MSIE [17-9]" ssl-unclean-shutdown

	ServerAdmin heron-admin@kumc.edu
</VirtualHost>
