<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd">

  <!-- Spring MVC application context definition -->

  <bean name="myChecklist" scope="singleton"  lazy-init="true"
        class="edu.kumc.informatics.heron.servlet.MyChecklist">
    <constructor-arg>
      <ref bean="enterprise"/>
    </constructor-arg>
    <constructor-arg>
      <ref bean="sar"/>
    </constructor-arg>
  </bean>

  <!-- look for @Controller and such 
  TODO
  <context:component-scan base-package="edu.kumc.informatics.heron.servlet"/>
-->

  <bean id="urlMapper"
        class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="mappings">
      <props>
        <prop key="/u/myChecklist">myChecklist</prop>
      </props>
    </property>
    <property name="alwaysUseFullPath">
      <value>true</value>
    </property>
  </bean>
        
  <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <!-- <property name="viewClass" value="org.springframework.web.servlet.view.JstlView" /> -->
    <property name="viewClass" value="edu.kumc.informatics.heron.servlet.StringTemplateView" />
    <property name="prefix" value="/WEB-INF/templates/"/>
    <property name="suffix" value=".html"/>
    <property name="requestContextAttribute" value="rc"/>
  </bean>
</beans>
